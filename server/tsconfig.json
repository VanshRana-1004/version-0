{
  "compilerOptions": {
    "typeRoots": ["./types","./src/types", "./node_modules/@types"],
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"], 
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
  },
  "include": [
    "src/**/*" 
  ],
  "exclude": [
    "node_modules"
  ]
}